<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ksmirenko.flexicards.core">

    <application
        android:allowBackup="true"
        android:label="@string/app_name">
        <activity android:name=".layout.CategoryActivity" />
        <activity
            android:name=".layout.CardActivity"
            android:parentActivityName=".layout.CategoryActivity" />
        <activity
            android:name=".layout.DictionaryActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".layout.CategoryActivity">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable_dict" />
        </activity>
    </application>

</manifest>
