<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingStart="@dimen/padding_list_item_left"
              android:paddingEnd="@dimen/padding_list_item_left"
              android:paddingTop="@dimen/padding_list_item_topbottom"
              android:paddingBottom="@dimen/padding_list_item_topbottom"
              android:clickable="true">
    <TextView
            android:id="@+id/textview_card_detail_front"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_list_item_primary"
            android:textColor="@color/textPrimary"
            android:singleLine="false"
            android:maxEms="@integer/maxems_card_detail_front"
            android:maxLines="3"
            android:scrollbars="vertical"/>
    <TextView
            android:id="@+id/textview_card_detail_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_list_item_secondary"
            android:textColor="@color/textSecondary"
            android:singleLine="false"
            android:maxEms="@integer/maxems_card_detail_back"
            android:maxLines="4"
            android:scrollbars="vertical"/>
</LinearLayout>