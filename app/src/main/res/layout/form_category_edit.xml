<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <!-- TODO: fix layout: bigger fonts, separator after title -->
    <EditText
            android:id="@+id/edittext_category_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:hint="@string/hint_category_name"
            android:singleLine="true">
        <requestFocus/>
    </EditText>

    <EditText
            android:id="@+id/edittext_category_lang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/edittext_category_name"
            android:hint="@string/hint_category_lang"
            android:singleLine="true"
            android:maxLength="2"/>

</RelativeLayout>