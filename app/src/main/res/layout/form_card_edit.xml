<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <!-- TODO: fix layout: bigger font, separator after title -->
    <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_card_category"/>
    <EditText
            android:id="@+id/edittext_card_front"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_card_front"
            android:maxLines="3" />
    <EditText
            android:id="@+id/edittext_card_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_card_back"
            android:maxLines="6" />
</LinearLayout>