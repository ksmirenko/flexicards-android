<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <View
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:background="@color/primaryDark"
            android:layout_marginTop="@dimen/margin_dialog_items"/>
    <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5sp"
            android:layout_marginStart="5sp"
            android:layout_marginRight="2sp"
            android:layout_marginEnd="2sp"
            android:id="@+id/spinner_card_category"
            android:layout_marginTop="@dimen/margin_dialog_items"
            tools:ignore="RtlSymmetry"/>
    <EditText
            android:id="@+id/edittext_card_front"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_card_front"
            android:maxLines="3"
            android:textSize="@dimen/text_size_dialog"/>
    <EditText
            android:id="@+id/edittext_card_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_dialog_items"
            android:hint="@string/hint_card_back"
            android:maxLines="6"
            android:textSize="@dimen/text_size_dialog"/>
</LinearLayout>