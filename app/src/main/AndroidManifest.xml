<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.ksmirenko.flexicards.app">

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
        <activity
                android:name=".layout.CategoryListActivity"
                android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.ksmirenko.flexicards.core.layout.CategoryActivity"
            android:parentActivityName=".layout.CategoryListActivity">
        </activity>
        <activity
            android:name="com.ksmirenko.flexicards.core.layout.CardActivity"
            android:parentActivityName="com.ksmirenko.flexicards.core.layout.CategoryActivity">
        </activity>
        <activity
            android:name="com.ksmirenko.flexicards.core.layout.DictionaryActivity"
            android:parentActivityName="com.ksmirenko.flexicards.core.layout.CategoryActivity"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH"/>
            </intent-filter>
            <meta-data android:name="android.app.searchable"
                android:resource="@xml/searchable_dict"/>
        </activity>
        <activity
                android:name=".layout.TestfieldActivity"
                android:label="Testfield">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <!--<category android:name="android.intent.category.LAUNCHER" /> -->
            </intent-filter>
        </activity>
    </application>

</manifest>
