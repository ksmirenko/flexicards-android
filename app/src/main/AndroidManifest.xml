<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="io.github.ksmirenko.flexicards">

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
        <activity
                android:name=".MainActivity"
                android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".CategoryActivity"
                android:parentActivityName="io.github.ksmirenko.flexicards.MainActivity">
        </activity>
        <activity
                android:name=".CardViewActivity"
                android:parentActivityName="io.github.ksmirenko.flexicards.CategoryActivity">
        </activity>
        <activity
                android:name=".DictionaryActivity"
                android:parentActivityName="io.github.ksmirenko.flexicards.CategoryActivity"
                android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH"/>
            </intent-filter>
            <meta-data android:name="android.app.searchable"
                       android:resource="@xml/searchable_dict"/>
        </activity>
        <activity
                android:name=".TestfieldActivity"
                android:label="Testfield">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <!--<category android:name="android.intent.category.LAUNCHER" /> -->
            </intent-filter>
        </activity>
    </application>

</manifest>
